<resources>
    <style name="Theme.Pocket" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/green_500</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Widget.App.Button.Toggle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
    </style>
</resources>