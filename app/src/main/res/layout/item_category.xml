<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardElevation="0dp"
    tools:cardBackgroundColor="@color/pastel_pink"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_dark_primary" android:textSize="12sp"
        tools:text="Food" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_dark_primary" android:textSize="16sp"
        android:textStyle="bold"
        tools:text="+$250" />

    <ProgressBar
        android:id="@+id/progress_category"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:progressTint="@color/text_dark_primary" android:progressBackgroundTint="#4D1F2937" android:visibility="visible" />

    <TextView
        android:id="@+id/tv_additional_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_dark_primary" android:alpha="0.7"
        android:textSize="10sp"
        android:visibility="gone"
        tools:text="Daily: $8"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_gravity="end|top"
        android:visibility="gone"
        app:tint="@color/text_dark_primary" tools:src="@drawable/ic_check"
        tools:visibility="visible" />

</LinearLayout>

</com.google.android.material.card.MaterialCardView>